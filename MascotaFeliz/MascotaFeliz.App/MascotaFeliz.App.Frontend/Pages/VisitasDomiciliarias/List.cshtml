@page
@model MascotaFeliz.App.Frontend.Pages.ListModel
@{
}
<h1>Listado de Visitas Domiciliaras</h1>
<form method="get">
    <div class="form-group">

        <p>
            Visita Domiciliaria por Medicinas: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>
<table class="table">
    <tr>
        <td>Fecha</td>
        <td>ID</td>
        <td>Temperatura</td>
        <td>Peso</td>
        <td>Frecuencia Cardiaca</td>
        <td>Frecuencia Respiratoria</td>
        <td>Estado de Animo</td>
        <td>Medicinas</td>
        <td>Remisión</td>
        <td>Código Veterinario</td>
        <td>Mascota</td>
    </tr>
    @foreach (var saludo in Model.visitaDomiciliarias)
    {
        <tr>
            <td>@saludo.FechaHoraVisita</td>
            <td>@saludo.Id</td>
            <td>@saludo.Temperatura</td>
            <td>@saludo.Peso</td>
            <td>@saludo.FrencuenciaCardiaca</td>
            <td>@saludo.FrencuenciaRespiratoria</td>
            <td>@saludo.EstadoAnimo</td>
            <td>@saludo.Medicinas</td>
            <td>@saludo.Remision</td>
            <td>@saludo.Encargado.CodigoProfesional</td>
            <td>@saludo.Paciente.Nombre</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-visitaDomiciliariaId="@saludo.Id">
                    <i class="fas fa-info-circle fa-lg"></i </a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-visitaDomiciliariaId="@saludo.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                </a>
            </td>



        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar Visita Domiciliaria</a>