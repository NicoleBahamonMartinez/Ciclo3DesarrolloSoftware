    <label asp-for="Dueño.Ciudad"></label>
    <input asp-for="Dueño.Ciudad" class="form-control">
    <span class="text-danger" asp-validation-for="Dueño.Ciudad"></span>
</div>
<div class="form-group">
    <label asp-for="Dueño.Pais"></label>
