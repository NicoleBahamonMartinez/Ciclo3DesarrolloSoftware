    <span class="text-danger" asp-validation-for="Dueño.Nombres"></span>
</div>
<div class="form-group">
    <label asp-for="Dueño.Apellidos"></label>
    <input asp-for="Dueño.Apellidos" class="form-control">
    <span class="text-danger" asp-validation-for="Dueño.Apellidos"></span>
</div>
<div class="form-group">
    <label asp-for="Dueño.NumeroTelefono"></label>
    <input asp-for="Dueño.NumeroTelefono" class="form-control">
    <span class="text-danger" asp-validation-for="Dueño.NumeroTelefono"></span>
</div>
<div class="form-group">
    <label asp-for="Dueño.Correo"></label>
    <input asp-for="Dueño.Correo" class="form-control">
    <span class="text-danger" asp-validation-for="Dueño.Correo"></span>
</div>
<div class="form-group">
    <label asp-for="Dueño.Genero"></label>
    <input asp-for="Dueño.Genero" class="form-control">
    <span class="text-danger" asp-validation-for="Dueño.Genero"></span>
</div>
<div class="form-group">
    <label asp-for="Dueño.Direccion"></label>
    <input asp-for="Dueño.Direccion" class="form-control">
    <span class="text-danger" asp-validation-for="Dueño.Direccion"></span>
